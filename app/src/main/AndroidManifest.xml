<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xzh.picturesmanager" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:name=".base.YmatouApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".ui.AlbumTestActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.AlbumActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.CameraActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.ManagerPictureActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.BrowseCameraActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.BrowsePictureActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
